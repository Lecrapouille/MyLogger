{
    // clang-format
    "clang-format.executable": "clang-format",
    "editor.formatOnSave": true,
    // Error squiggles
    "C_Cpp.errorSquiggles": "disabled",
    // Remove trailing whitespace
    "files.trimTrailingWhitespace": true,
    // SonarLint needs to know files to compile.
    // Files are generated by the command bears.
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/.vscode/compile_commands.json",
    // Makefile needed for SonarLint
    "makefile.compileCommandsPath": "${workspaceFolder}/.vscode/compile_commands.json",
    "makefile.configurations": [
        {
            "name": "MyConfiguration",
            "problemMatchers": [
                "$gcc"
            ],
            "makeArgs": []
        }
    ],
    // Enable Python linting and Pylance type checking
    "cpplint.lineLength": 82,
    "cpplint.filters": [
        "-whitespace/parens",
        "-whitespace/braces",
        "-whitespace/forcolon",
        "-whitespace/comments",
        "-whitespace/newline",
        "-whitespace/indent",
        "-whitespace/blank_line",
        "-readability/inheritance",
        "-whitespace/ending_newline"
    ],
    "files.associations": {
        "random": "cpp",
        "iomanip": "cpp",
        "iostream": "cpp",
        "ostream": "cpp",
        "array": "cpp",
        "bitset": "cpp",
        "string_view": "cpp",
        "initializer_list": "cpp",
        "ranges": "cpp",
        "span": "cpp",
        "regex": "cpp",
        "valarray": "cpp",
        "any": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "codecvt": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "condition_variable": "cpp",
        "csignal": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "map": "cpp",
        "set": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "ratio": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "fstream": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
